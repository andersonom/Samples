@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Change Request Creator</h1>
    <p class="lead">Still missing selecting servers and system list, doing it randomically!</p>

</div>

<div class="row">
    @using (Html.BeginForm("Download", "Home"))
    {
        @Html.AntiForgeryToken()
        <div class="col-md-4">
            <h2>Change Request</h2>
        
                @*@Html.DropDownList("DDLServer", new SelectList(ViewBag.ListaTipoLocal))*@
                <div class="form-group">
                    <label>Owner Name</label> 
                    @Html.TextBox("ownerName",null, new { @class = "form-control" })
                </div>
                <div  class="form-group">
                    <label>Version</label> 
                    @Html.TextBox("version", null, new { @class = "form-control" } )
                </div>
                <div class="form-group">
                    <label>Description</label>                    
                    @Html.TextArea("description", null, new { @class = "form-control", cols = "40", rows = "4" })
                </div>
                <div  class="form-group">
                    <label>Servers</label>
                    @Html.ListBox("SelectedServers", ViewBag.ServerTypes as MultiSelectList, new { data_placeholder = "Choose Servers...", @class = "form-control" })
                </div>
             
            <input type="submit" value="Download" class="btn btn-success" />
        </div>
    }
</div>